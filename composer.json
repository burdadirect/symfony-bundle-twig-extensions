{
  "name": "burdadirect/symfony-bundle-twig-extensions",
  "description": "HBM Twig Extensions Bundle - Datetime, Object, String helper for twig.",
  "authors" : [{
    "name" : "Christian Puchinger",
    "email" : "christian.puchinger@burda.com"
  }],
  "repositories" : [
    {
      "type": "vcs",
      "url": "git@github.com:burdadirect/codestyle.git"
    }
  ],
  "license": "MIT",
  "type": "symfony-bundle",
  "autoload": {
    "psr-4": {
      "HBM\\TwigExtensionsBundle\\": "src/"
    }
  },
  "require": {
    "php": "^8.2.0",
    "ext-dom": "*",
    "ext-mbstring": "*",
    "symfony/config": "^7.0",
    "symfony/css-selector": "^7.0",
    "symfony/dependency-injection": "^7.0",
    "symfony/dom-crawler": "^7.0",
    "symfony/http-kernel": "^7.0",
    "symfony/twig-bundle": "^7.0",
    "scssphp/scssphp": "^1.12"

  },
  "require-dev": {
    "burdadirect/codestyle": "dev-main",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
